{% extends "base.html.twig" %}

{% block Copter %}


<body>


	<!-- favoris page -->
	<div class="privacy">
		<div class="container">
			<!-- tittle heading -->
			<h3 class="tittle-w3l">Favoris
				
			</h3>
			<!-- //tittle heading -->
			<div class="checkout-right">

			{% if favoris | length >0 %}
				<div class="table-responsive">
					<table class="timetable_sub">
