							<tr>
								
								<th>Product Name</th>
								
								<th> Details</th>
							</tr>
						</thead>
						
							<tr>
							{% for item in favoris %}
								

								<td class="invert">{{item.name}}</td>
								
								
								<td  class="invert">
								<a href="{{path('details_product', {'id': item.idproduct}) }}" class="glyphicon glyphicon-remove-circle" style="color:black" >
								</td>
							</tr>
								{% endfor %}
						
							
							
							
							</table>
	
						</tbody>
					</table>
				</div>
				{% else %}
			<p>Le panier est vide</p>
			{% endif %}
			<br>
		

		</div>

		

		

	</div>
	
	<script src="js/jquery-2.1.4.min.js"></script>
