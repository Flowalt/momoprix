{% extends "base.html.twig" %} 
 

 {% block Copter %}

 <!-- signup Model -->
    <!-- Modal2 -->
    <div>
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body modal-body-sub_agile">
                    <div class="main-mailposi">
                        <span class="fa fa-envelope-o" aria-hidden="true"></span>
                    </div>
                    <div class="modal_body_left modal_body_left1">
                        <h3 class="agileinfo_sign">Inscription</h3>
                        <p>
                            Rejoignez le Momoclub en créant votre compte!
                        </p>
                        <form action="/register" method="post">
                            <div class="styled-input agile-styled-input-top">
                                <input type="text" placeholder="Nom" name="Nom" required="">
                            </div>
                             <div class="styled-input agile-styled-input-top">
                                <input type="text" placeholder="Prénom" name="Prenom" required="">
                            </div>
                            <div class="styled-input">
                                <input type="email" placeholder="Email" name="Email" required="">
                            </div>
                            <div class="styled-input">
                                <input type="password" placeholder="Mot de passe" name="password" id="password1" required="">
                            </div>
                            <div class="styled-input">
                                <input type="password" placeholder="Confirmez votre mot de passe" name="repassword" id="password2" required="">
                            </div>
                            <input type="submit" value="S'inscrire">
                        </form>
                        <p>
                            <a href="#">En cliquant sur S'inscrire, vous acceptez nos conditions d'utilisations</a>
                        </p>
                    </div>
                </div>
            </div>
            <!-- //Modal content-->
        </div>
    </div>


<script>
 $(".close").click(
            function() {
                document.location.href = "/";
            }
        );

</script>
     {% endblock %}